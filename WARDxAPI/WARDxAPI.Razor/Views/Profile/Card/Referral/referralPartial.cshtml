@model PatientReferral

<!-- 8 COLUMN CARD START -->
<form asp-controller="Profile"
      class="col-md-8">
    <div class="card card-lightblue">
        <!-- CARD HEADER START -->
        <div class="card-header">
            <h3 class="card-title">Referral Details</h3>
            <!-- CARD TOOLS START -->
            <div class="card-tools">
                <!-- ADD CARD TOOLS HERE -->
                <partial name="HTMLSections/Card/_collapsePartial" />
            </div>
            <!-- CARD TOOLS END -->
        </div>
        <!-- CARD HEADER END -->
        <!-- CARD BODY START -->
        <div class="card-body">
            <!-- ADD CONTENT HERE -->
            <!-- PATIENT INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="PatientID"></label>

                <!-- INPUT ITEM -->
                <select asp-for="PatientID"
                        class="selectpicker"
                        data-width="100%"
                        data-live-search="true"
                        title="Select patient">
                    <partial name="HTMLSections/Card/Body/_selectOptionPartial" model="Model.PatientList" />
                </select>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="PatientID"
                      style="display:inline" />
            </div>
            <!-- PATIENT INPUT END -->
            <!-- GP INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="ReferringDoctorID"></label>

                <!-- INPUT ITEM -->
                <select asp-for="ReferringDoctorID"
                        class="selectpicker"
                        data-width="100%"
                        data-live-search="true"
                        title="Select general practitioner">
                    <partial name="HTMLSections/Card/Body/_selectOptionPartial" model="Model.GPDoctorList" />
                </select>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="ReferringDoctorID"
                      style="display:inline" />
            </div>
            <!-- GP INPUT END -->
            <!-- SPECIALIST INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="SpecialistID"></label>

                <!-- INPUT ITEM -->
                <select asp-for="SpecialistID"
                        class="selectpicker"
                        data-width="100%"
                        data-live-search="true"
                        title="Select ward specialist">
                    <partial name="HTMLSections/Card/Body/_selectOptionPartial" model="Model.SpecialistList" />
                </select>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="SpecialistID"
                      style="display:inline" />
            </div>
            <!-- SPECIALIST INPUT END -->
            <!-- REASON INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="Reason"></label>

                <!-- INPUT ITEM -->
                <textarea asp-for="Reason"
                          class="form-control"
                          rows="3"
                          placeholder="Enter referral details">
                            </textarea>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="Reason" />
            </div>
            <!-- REASON INPUT END -->
            <!-- ADMISSION DATE INPUT MASK START -->
            <div class="form-group">
                <!-- LABEL -->
                <label asp-for="DateInput"></label>

                <!-- INPUT -->
                <input asp-for="DateInput"
                       type="text"
                       class="form-control"
                       data-inputmask-alias="datetime"
                       data-inputmask-inputformat="dd/mm/yyyy" data-mask>

                <!-- VALIDATION MESSAGE -->
                <span asp-validation-for="DateInput" />
            </div>
            <!-- ADMISSION DATE INPUT MASK END -->
        </div>
        <!-- CARD BODY END -->
        <!-- CARD FOOTER START -->
        <div class="card-footer"
             id="card-buttons">
            <!-- ADD BUTTONS HERE -->
            <a asp-action="@nameof(IProfileController.Diagnosis)"
                    type="submit"
                    class="btn btn-outline-secondary">
                Diagnosis
            </a>
            <button asp-action="@nameof(IProfileController.Referral)"
                    type="submit"
                    class="btn btn-outline-primary float-right">
                Review and Submit
            </button>
        </div>
        <!-- CARD FOOTER END -->
    </div>
</form>
<!-- 8 COLUMN CARD END -->