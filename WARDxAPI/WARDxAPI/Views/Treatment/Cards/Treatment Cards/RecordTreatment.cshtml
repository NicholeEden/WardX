@model RecordTreatment 
<div class="card-body">
    <!-- ADD CONTENT HERE -->

    <div class="form-group">
        <!-- SELECT PATIENT NAME INPUT START -->
        <!-- SELECT INPUT START -->
        <div class="form-group">

            <!-- INPUT LABEL -->
            <label asp-for="PatientID"></label>

            <!-- INPUT ITEM -->
            <select asp-for="PatientID"
                    asp-items="@(new SelectList(Model.PatientList, "Key", "Value"))"
                    class="selectpicker"
                    data-width="100%"
                    data-live-search="true"
                    title="Please Select Patient Full Name">
            </select>

            <!-- INPUT VALIDATION MESSAGE -->
            <span asp-validation-for="PatientID"
                  style="display:inline" />
        </div>
        <div class="form-group">
            <!-- SELECT INPUT END -->
            <!-- SELECT NURSE NAME INPUT START -->
            <!-- INPUT SEARCH LABEL -->
            <label asp-for="NurseID"> Nurse Name </label>

            <!-- INPUT ITEM -->
            <select asp-for="NurseID"
                    asp-items="@(new SelectList(Model.NurseList, "Key", "Value"))"
                    class="selectpicker"
                    data-width="100%"
                    data-live-search="true"
                    title="Please Select Nurse Full Name">
                <partial name="HTMLSections/Card/Body/_selectOptionPartial2" model="Model.NurseList" />

            </select>

            <!-- INPUT VALIDATION MESSAGE -->
            <span asp-validation-for="NurseID" style="display:inline" />
        </div>

        <div class="form-group">
            <!-- SELECT TREATMENT NAME INPUT START -->
            <!-- INPUT SEARCH LABEL -->
            <label asp-for="TreatmentTypeID"> Treatment </label>

            <!-- INPUT ITEM -->
            <select asp-for="TreatmentTypeID"
                    asp-items="@(new SelectList(Model.TreatmentTypeList, "Key", "Value"))"
                    class="selectpicker"
                    data-width="100%"
                    data-live-search="true"
                    title="Please Select Treatment Type">
                <partial name="HTMLSections/Card/Body/_selectOptionPartial2" model="Model.TreatmentTypeList" />

            </select>

            <!-- INPUT VALIDATION MESSAGE -->
            <span asp-validation-for="TreatmentTypeID" style="display:inline" />
        </div>

        <div class="form-group">

            <!--ENTER OBSERVATION NOTES -->

            <label asp-for="ObservationNotes">Observation Notes: (optional)</label>
            <textarea asp-for="ObservationNotes" class="form-control" rows="5" id="Notes"></textarea>
        </div>

    </div>
</div>