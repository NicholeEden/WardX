@model RecordPrescription
<div class="card-body">
    <div class="form-group">
        <!-- SELECT INPUT START -->
        <div class="form-group">

            <!-- SELECT INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="MedicaltionID">Medication Name</label>
                <!-- INPUT ITEM -->
                <select asp-for="MedicaltionID"
                        asp-items="@(new SelectList(Model.MedicineNameList, "Key", "Value"))"
                        class="selectpicker"
                        data-width="100%"
                        data-live-search="true"
                        title="Please Select Medication Name">
                    <partial name="HTMLSections/Card/Body/_selectOptionPartial2" model="Model.MedicineNameList" />
                </select>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="MedicaltionID" style="display:inline" />


            </div>
            <!-- SELECT INPUT END -->
            <!-- SELECT INPUT START-->
            <!-- SELECT INPUT START -->
            <div class="form-group">

                <!-- INPUT LABEL -->
                <label asp-for="DoctorID">Specialist Name</label>
                <!-- INPUT ITEM -->
                <select asp-for="DoctorID"
                        asp-items="@(new SelectList(Model.DoctorList, "Key", "Value"))"
                        class="selectpicker"
                        data-width="100%"
                        data-live-search="true"
                        title="Please Select Specialist Name">
                    <partial name="HTMLSections/Card/Body/_selectOptionPartial2" model="Model.DoctorList" />
                </select>

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="DoctorID" style="display:inline" />


            </div>
            <!-- SELECT INPUT END -->

            <div class="input-group mb-3">


                <!-- INPUT ITEM -->
                <label asp-for="Dosage">Dosage</label>

                <input asp-for="Dosage"
                       class="form-control"
                       placeholder="Dosage">

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="Dosage" style="display:inline" text />

            </div>
            <!-- INPUT END-->
            <!-- INPUT START-->
            <!-- INPUT LABEL -->
            <label asp-for="Instructions">Instructions</label>

            <div class="input-group mb-3">


                <!-- INPUT ITEM -->
                <input asp-for="Instructions"
                       class="form-control"
                       placeholder="Instructions">

                <!-- INPUT VALIDATION MESSAGE -->
                <span asp-validation-for="Instructions" style="display:inline" text />

            </div>
            <!-- INPUT END-->
            <!-- INPUT END-->
            <!-- DATE INPUT MASK START -->
            <div class="form-group">
                <!-- LABEL -->

                <div class="input-group">
                    <!-- ICON -->
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="far fa-calendar-alt"></i>
                        </span>
                    </div>
                    <!-- INPUT -->
                    <input asp-for="DateIssued"
                           type="text"
                           class="form-control"
                           data-inputmask-alias="datetime"
                           data-inputmask-inputformat="dd/mm/yyyy" data-mask>

                    <!-- VALIDATION MESSAGE -->
                    <span asp-validation-for="DateIssued" style="display:inline" />

                </div>
            </div>
        </div>
            <!-- SELECT INPUT END -->

        </div>
    </div>
</div>
