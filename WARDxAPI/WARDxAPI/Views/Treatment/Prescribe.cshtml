@model AddPrescription
<!--SIDEBAR NAV BAR-->
@section TreatmentMenu{
    <partial name="HTMLSections/Sidebar/_sidebarTreatmentMenuPartial" /> }
<!--PAGE HEADER-->
<partial name="Header/PrescribeHeaderPartial" />
<!--PAGE CONTENT-->
<!-- CONTENT CONTAINER START -->
<div class="content">
    <div class="container-fluid">
        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">
            <div class="col-md-10">
                <partial name="HTMLSections/Alert/_dynamicPartial" model="Model.alertModel" />
            </div>
            <form asp-controller="Treatment"
                  asp-action="Prescribe"
                  class="col-md-6">

                <div class="card card-lightblue">

                    <!-- CARD HEADER START -->
                    <div class="card-header">
                        <h3 class="card-title">Prescription</h3>
                        <!-- CARD TOOLS START -->
                        <div class="card-tools">
                            <!-- ADD CARD TOOLS HERE -->
                            <partial name="HTMLSections/Card/_collapsePartial" />
                        </div>
                        <!-- CARD TOOLS END -->
                    </div>
                    <!-- CARD HEADER END -->
                    <!-- ADD CARD HERE -->
                    <partial name="Cards/Treatment Cards/PrescribeMedication" model="Model.PrescriptionModel" />


                    <!-- CARD FOOTER START -->
                    <div class="card-footer">
                        <!-- ADD BUTTONS HERE -->
                        <button asp-action=""
                                type="submit"
                                class="btn btn-outline-secondary">
                            Cancel
                        </button>
                        <button asp-action="@nameof(ITreatmentController.Prescribe)"
                                type="submit"
                                class="btn btn-outline-primary float-right">
                            Submit
                        </button>
                    </div>
                    <!-- CARD FOOTER END -->
                </div>
                <!-- 12 COLUMN ROW END -->
            </form>
        </div>
    </div>
</div>
<!-- CONTENT CONTAINER END -->
@section Scripts{
    <script>
        $(function () {

            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })

            $('[data-mask]').inputmask()
        })
    </script>
}
