@model VitalsModel
<!-- SIDEBAR NAV SECTION -->
@section treatmentMenu{
    <li class="nav-item has-treeview men menu-open">
        <!-- OPTION HEADER START -->
        <a href="#" class="nav-link active">
            <i class="fas fa-user-md"></i>
            <p>
                PATIENT TREATMENT
                <i class="right fas fa-angle-left"></i>
            </p>
        </a>
        <!-- OPTION HEADER END -->
        <!-- LEVEL 1 CONTAINER START -->
        <ul class="nav nav-treeview">
            <!-- LEVEL 1 & 2 CONTAINER START -->
            <li class="nav-item has-treeview menu-open">

                <!-- LEVEL 1 OPTION START -->
                <a href="#" class="nav-link active">
                    <i class="nav-icon fas fa-edit nav-icon"></i>
                    <p>
                        Record Vitals
                        <i class="right fas fa-angle-left"></i>
                    </p>
                </a>
                <!-- LEVEL 1 OPTION END -->
                <!-- LEVEL 2 CONTAINER START -->
                <ul class="nav nav-treeview ml-1">
                    <!-- LEVEL 2 OPTION START -->
                    <li class="nav-item">
                        <a class="nav-link">
                            <i class="far fa-circle nav-icon"></i>
                            <p>Record Vital Signs</p>
                        </a>
                    </li>
                    <!-- LEVEL 2 OPTION END -->
                    <!-- LEVEL 2 OPTION START -->
                    <li class="nav-item">
                        <a class="nav-link active">
                            <i class="far fa-dot-circle nav-icon"></i>
                            <p>View Vitals</p>
                        </a>
                    </li>
                    <!-- LEVEL 2 OPTION END -->
                </ul>
                <!-- LEVEL 2 CONTAINER END -->
            </li>
            <!-- LEVEL 1 & 2 CONTAINER END -->
            <partial name="HTMLSections/Sidebar/TreatmentMenu/RequestDoctorNavPartial" />
        </ul>
        <!-- LEVEL 1 CONTAINER END -->
    </li>
}

<!-- PAGE HEADER -->
<partial name="Header/ViewVitalsHeaderPartial" />

<!-- PAGE CONTENT-->
<div class="content">
    <div class="container-fluid">
        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">

            <div class="col-md-10">
                <partial name="HTMLSections/Alert/_dynamicPartial" model="Model.alertModel" />
            </div>
            <!-- ADD CARD HERE -->
            <form asp-controller="Treatment"
                  asp-action="@nameof(ITreatmentController.ViewVitals)"
                  class="col-md-6">

                <div class="card card-lightblue">

                    <!-- CARD HEADER START -->
                    <div class="card-header">
                        <h3 class="card-title">Vitals Signs</h3>
                        <!-- CARD TOOLS START -->
                        <div class="card-tools">
                            <!-- ADD CARD TOOLS HERE -->
                            <partial name="HTMLSections/Card/_collapsePartial" />
                        </div>
                        <!-- CARD TOOLS END -->
                    </div>
                    <!-- CARD HEADER END -->
                    <!-- CARD BODY START -->
                    <partial name="Cards/Treatment Cards/ViewVital" model="Model.ViewVitals" />
                    <!-- CARD BODY END -->
                    <!-- CARD FOOTER START -->
                    <div class="card-footer">
                        <!-- ADD BUTTONS HERE -->
                        <button asp-action=""
                                type="submit"
                                class="btn btn-outline-secondary">
                            Cancel
                        </button>
                        
                    </div>
                    <!-- CARD FOOTER END -->
                </div>
            </form>

        </div>
    </div>
</div>

