@model CheckOutModel
<!-- SIDEBAR NAV SECTION -->
@section movementMenu {
	<partial name="HTMLSections/Sidebar/_sidebarPatientMovePartial" />
}

<!-- PAGE HEADER -->
<partial name="Header/checkOutPartial" />

<div class="content">
	<div class="container-fluid">


		<!-- 12 COLUMN ROW START -->
		<!--START OF ROW 1 !-->
		
		<div class="row justify-content-center">
			<partial name="HTMLSections/Alert/_dynamicPartial" model="Model.alertModel" />
		</div>
		<!--END OF ROW 1 !-->
		<!-- 12 COLUMN ROW END -->
		<!-- 12 COLUMN ROW START -->
		<!--START OF ROW 2 !-->
		<div class="row">
			<!-- 6 COLUMN CARD START -->
			<form asp-action="@nameof(IPatientMoveController.CheckOut)"
				  asp-controller="PatientMove" class="col-md-12">
				<div class="card card-lightblue ">
					<!-- CARD HEADER START -->
					<partial name="Card/CheckOut/headerPartial" />
					<!-- CARD HEADER END -->
					<!-- CARD FORM START -->
					<!-- CARD BODY START -->
					<partial name="Card/CheckOut/bodyPartial" model="Model.moveCheckOut" />
					<!-- CARD BODY END -->
					<!-- CARD FOOTER START -->
					<div id="card-buttons" class="card-footer text-center">

						<!-- FOOTER CONTENT HERE -->
						<button asp-action="@nameof(IPatientMoveController.CheckOut)"
								type="submit"
								class="btn btn-outline-primary ">
							Check Out
						</button>
					
					</div>
					<!-- CARD FOOTER END -->
					<!-- CARD FORM END -->

				</div>
				<!-- CARD END -->

			</form>
			<!-- 6 COLUMN CARD START -->
			


		</div>
        <div class="row">
            <!-- 6 COLUMN CARD START -->
            <div class="col-md-12">
                <div class="card card-lightblue">
                    <!-- CARD HEADER START -->
                    <partial name="Card/CheckOut/inHeaderPartial" />
                    <!-- CARD HEADER END -->
                    <!-- CARD BODY START -->
                    <partial name="Card/CheckOut/checkOutTablePartial" model="Model.moveCheckOut" />
                    <!-- CARD BODY END -->
                    <!-- CARD FOOTER START -->
                    <div class="card-footer">

                    </div>
                    <!-- CARD FOOTER END -->
                </div>
                <!-- /.card -->
            </div>
            <!-- 6 COLUMN CARD START -->
        </div>
		<!--END OF ROW 2 !-->
		<!-- 12 COLUMN ROW END -->
		<!--ALERT ROW-->

	</div>
</div><!-- /.container-fluid -->
<!-- CONTENT CONTAINER END -->

@section Scripts{
	<script>
        $(function () {

            $("#dtTable2").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["pdf", "print", "colvis"]
            }).buttons().container().appendTo('#dtTable2_wrapper .col-md-6:eq(0)');
        })


		// submit loading state
		$(function () {
			// select submit event on form
			$('form').submit('submit', function () {
				// check form validity
				if ($(this).valid()) {
					// create loading overlay
					var overlay = $('<div class="overlay"><i class="fas fa-2x fa-sync-alt fa-spin"></i></div>');
					// select card footer
					var card = $('#card-buttons');
					// add overlay after footer
					$(card).after(overlay);
				}
			});
		});

		$('#example').tooltip(options)
	</script>
}