@model MovementsModel
<!-- SIDEBAR NAV SECTION -->
@section movementMenu {
	<partial name="HTMLSections/Sidebar/_sidebarPatientMovePartial" />
}

<!-- PAGE HEADER -->
<partial name="Header/movementsPartial" />

<!-- CONTENT CONTAINER START -->
<div class="content">
	<div class="container-fluid">
		<!--ALERT ROW-->
		<div class="row justify-content-center">
			<partial name="HTMLSections/Alert/_dynamicPartial" model="Model.alertModel" />
		</div>
		<!-- 12 COLUMN ROW START -->
		<div class="row justify-content-center">
			<!-- ADD CARD HERE -->
			<!-- 6 COLUMN CARD START -->
			<form asp-controller="PatientMove"
				  asp-action="@nameof(IPatientMoveController.Movements)"
				  class="col-md-4">
				<div class="card card-lightblue">
					<!-- CARD HEADER START -->
					<div class="card-header">
						<h3 class="card-title">Patient Movement Search</h3>
						<!-- CARD TOOLS START -->
						<div class="card-tools">
							<!-- ADD CARD TOOLS HERE -->
							<!-- This will cause the card to maximize when clicked -->
							<partial name="HTMLSections/Card/_maximizePartial" />
							<!-- This will cause the card to minimize when clicked -->
							<partial name="HTMLSections/Card/_collapsePartial" />
						</div>
						<!-- CARD TOOLS END -->
					</div>
					<!-- CARD HEADER END -->
					<!-- CARD BODY START -->

					<partial name="Card/Movements/movebodyPartial" model="Model.movementReports" />


					<!-- CARD BODY END -->
					<!-- CARD FOOTER START -->
					<div class="card-footer text-center">
						<!-- ADD BUTTONS HERE -->
						<button asp-action="@nameof(IPatientMoveController.Movements)"
								type="submit"
								class="btn btn-outline-primary ">
							<i class="fas fa-search"></i>
							Search
						</button>
					</div>
					<!-- CARD FOOTER END -->
				</div>
			</form>

			<!--6 COLUMN CARD END -->
		</div>
		<!-- 12 COLUMN ROW END
		<!-- 12 COLUMN ROW START -->
		<div class="row justify-content-center">
			<!-- ADD CARD HERE -->
			<!-- 6 COLUMN CARD START -->
			<form asp-controller="PatientMove"
				  asp-action="@nameof(IPatientMoveController.Movements)"
				  class="col-md-12">
				<div class="card card-lightblue">
					<!-- CARD HEADER START -->
					<div class="card-header">
						<h3 class="card-title">Patient Movement Details</h3>
						<!-- CARD TOOLS START -->
						<div class="card-tools">
							<!-- ADD CARD TOOLS HERE -->
							<!-- This will cause the card to maximize when clicked -->
							<partial name="HTMLSections/Card/_maximizePartial" />
							<!-- This will cause the card to minimize when clicked -->
							<partial name="HTMLSections/Card/_collapsePartial" />
						</div>
						<!-- CARD TOOLS END -->
					</div>
					<!-- CARD HEADER END -->
					<!-- CARD BODY START -->

					<partial name="Card/Movements/moveTablePartial" model="Model.movementReports" />

					<!-- CARD BODY END -->
					<!-- CARD FOOTER START -->
					<div class="card-footer">
						<!-- ADD BUTTONS HERE -->


					</div>
					<!-- CARD FOOTER END -->
				</div>
			</form>
			<!-- 6 COLUMN CARD END --
			</div>
			<!-- 12 COLUMN ROW END -->
		</div>
	</div>
	<!-- CONTENT CONTAINER END -->

</div>

@section Scripts{
	<script>
		$(function () {
			$('#rangePicker').daterangepicker({
				locale: {
					format: 'YYYY/MM/DD'
				}
			})
		})
	</script>


	
		<script>
			$(function () {

				$("#dtTable2").DataTable({
					"responsive": true,
					"lengthChange": false,
					"autoWidth": false,
					"buttons": ["pdf", "print", "colvis"]
				}).buttons().container().appendTo('#dtTable2_wrapper .col-md-6:eq(0)');
			})
		</script>
	}
}