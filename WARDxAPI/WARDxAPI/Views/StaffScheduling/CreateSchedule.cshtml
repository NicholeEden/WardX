@model CreateScheduleModel
<!-- SIDEBAR NAV SECTION -->
@section appointmentMenu{
    <partial name="HTMLSections/Sidebar/_sidebarAppointmentPartial" />
}

<!-- PAGE HEADER -->
<partial name="Header/schedulePartial" />

<!-- CONTENT CONTAINER START -->
<div class="content">
    <div class="container-fluid">

        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">
            <div class="col-12">  </div>
            <!-- ADD CARD HERE -->
            <!-- 6 COLUMN CARD START -->
            <form asp-controller="StaffScheduling"
                  asp-action="CreateSchedule"
                  class="col-md-6">
                <div class="card card-lightblue">

                    <!-- CARD HEADER START -->
                    <partial name="Card/CreateSchedule/headerPartial" />
                    <!-- CARD HEADER END -->
                    <!-- CARD BODY START -->
                    <partial name="Card/CreateSchedule/tableBodyPartial" model="@Model.CreateSchedule" />

                    <!-- CARD BODY END -->
                    <!-- CARD FOOTER START -->
                    <div class="card-footer">

                        <!-- ADD BUTTONS HERE -->
                        <button asp-action="CreateSchedule"
                                type="submit"
                                class="btn btn-outline-primary float-left">
                            Create
                        </button>

                        <button asp-action="@nameof(IHomeController.Index)"
                                type="submit"
                                class="btn btn-outline-secondary float-right">
                            Cancel
                        </button>

                    </div>
                    <!-- CARD FOOTER END -->

                </div>
            </form>
            <!-- 6 COLUMN CARD END -->

        </div>
        <!-- 12 COLUMN ROW END -->
        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">
            <!-- ADD CARD HERE -->

        </div>
        <!-- 12 COLUMN ROW END -->
    </div>
</div>
<!-- CONTENT CONTAINER END -->
@section Scripts{
    <script>
        $(function () {
            $('#rangePicker').daterangepicker({
                locale: {
                    format: 'DD/MM/YYYY'
                }
            })
        })
    </script>
}