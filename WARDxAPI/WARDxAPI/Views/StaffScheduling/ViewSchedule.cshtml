@model ViewScheduleModel
<!-- SIDEBAR NAV SECTION -->
@section appointmentMenu{
    <li class="nav-item has-treeview men menu-open">
        <!-- OPTION HEADER START -->
        <a href="#" class="nav-link active">
            <i class="nav-icon fas fa-clock"></i>
            <p>
                SCHEDULING
                <i class="right fas fa-angle-left"></i>
            </p>
        </a>
        <!-- OPTION HEADER END -->

        <!-- LEVEL 1 CONTAINER START -->
        <ul class="nav nav-treeview">

            <!-- LEVEL 1 OPTION START -->
            <li class="nav-item">
                <a asp-controller="StaffScheduling"
                   asp-action="CreateSchedule"
                   class="nav-link">
                    <i class="nav-icon fas fa-edit nav-icon"></i>

                    <p> Create Schedule </p>
                </a>
            </li>
            <!-- LEVEL 1 OPTION END -->
            <!-- LEVEL 1 OPTION START -->
            <li class="nav-item">
                <a asp-controller="StaffScheduling"
                   asp-action="ViewSchedule"
                   class="nav-link active">
                    <i class="nav-icon fas fa-calendar nav-icon"></i>

                    <p> View Schedule </p>
                </a>
            </li>
            <!-- LEVEL 1 OPTION END -->
            <!-- LEVEL 1 OPTION START -->
            <li class="nav-item">
                <a asp-controller="StaffScheduling" asp-action="GenerateTimesheet" class="nav-link">
                    <i class="nav-icon fas fa-cogs nav-icon"></i>

                    <p> Generate Timesheet </p>
                </a>
            </li>
            <!-- LEVEL 1 OPTION END -->
            <!-- LEVEL 1 OPTION START -->
            <li class="nav-item">
                <a asp-controller="StaffScheduling" asp-action="ViewTimesheet" class="nav-link">
                    <i class="nav-icon fas fa-clipboard nav-icon"></i>

                    <p> View Timesheet </p>
                </a>
            </li>
            <!-- LEVEL 1 OPTION END -->

        </ul>
        <!-- LEVEL 1 CONTAINER END -->
    </li>
}

<!-- PAGE HEADER -->
<partial name="Header/viewSchedulePartial" />

<!-- CONTENT CONTAINER START -->
<div class="content">
    <div class="container-fluid">
        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">
            <div class="col-12"> <partial name="HTMLSections/Alert/_dynamicPartial" model="Model.alertModel" /> </div>
            <!-- ADD CARD HERE -->
            <div class="col-md-12">
                <div class="card card-lightblue">
                    <!-- CARD HEADER START -->
                    <div class="card-header">
                        <h3 class="card-title">View Schedule </h3>
                    </div>
                    <!-- CARD HEADER END -->

                    <!-- CARD BODY START -->
                    <partial name="Card/ViewSchedule/tableBodyPartial" model="Model.ScheduleTable" />
                    <!-- CARD BODY END -->

                    <!-- CARD FOOTER START -->
                    <div class="card-footer">
                        <a asp-action="@nameof(IStaffSchedulingController.GenerateTimesheet)"
                                type="submit"
                                class="btn btn-outline-primary float-left">
                            GENERATE TIMESHEET
                        </a>
                        <a asp-action="@nameof(IStaffSchedulingController.CreateSchedule)"
                                type="submit"
                                class="btn btn-outline-primary float-right">
                            CREATE
                        </a>
                    </div>
                    <!-- CARD FOOTER END -->
                </div>
                <!-- /.card -->
            </div>
            <!-- 6 COLUMN CARD START -->
        </div>
        <!-- 12 COLUMN ROW END -->

        <!-- 12 COLUMN ROW START -->
        <div class="row justify-content-center">
            <!-- ADD CARD HERE -->

        </div>
        <!-- 12 COLUMN ROW END -->

    </div>
</div>
<!-- CONTENT CONTAINER END -->
@section Scripts{
    <script>
        $(function () {

            $("#dtTable").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["pdf", "print", "colvis"]
            }).buttons().container().appendTo('#dtTable_wrapper .col-md-6:eq(0)');
        })
    </script>
}