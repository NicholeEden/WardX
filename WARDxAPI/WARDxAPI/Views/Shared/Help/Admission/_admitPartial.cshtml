<div class="modal fade"
     id="admitHelp">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <!-- HEADER TITLE HERE -->
                <h4 class="modal-title">
                    Admitting a patient.
                </h4>
                <!-- CLOSE BUTTON -->
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- CAROUSEL IDENTIFIER NAME -->
                <div id="carouselPatientAdmit"
                     class="carousel slide"
                     data-ride="carousel">
                    <ol class="carousel-indicators">
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselPatientAdmit"
                            data-slide-to="0"
                            class="active"></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselPatientAdmit"
                            data-slide-to="1"
                            class=""></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselPatientAdmit"
                            data-slide-to="2"
                            class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <!-- CAROUSEL FIRST ITEM -->
                        <div class="carousel-item carousel-item-next carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/Admission/Admit01.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Select the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Admit Patient'
                                </code>
                                button from the Referral table.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/Admission/Admit02.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                The admit form appears
                                <!-- HIGHLIGHT -->
                                <code>
                                    'displaying the information'
                                </code>
                                of the input patient to admit.
                            </div>
                        </div>
                        <!-- CAROUSEL LAST ITEM -->
                        <div class="carousel-item active carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/Admission/admit03.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Admit the patient by pressing the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Admit button'
                                </code>
                            </div>
                        </div>
                    </div>
                    <!-- CAROUSEL PREVIOUS -->
                    <a class="carousel-control-prev"
                       href="#carouselPatientAdmit"
                       role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <!-- CAROUSEL NEXT -->
                    <a class="carousel-control-next"
                       href="#carouselPatientAdmit"
                       role="button" data-slide="next">
                        <span class="carousel-control-next-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>

    </div>

</div>
