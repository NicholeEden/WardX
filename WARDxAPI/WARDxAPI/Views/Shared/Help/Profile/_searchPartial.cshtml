<div class="modal fade"
     id="patientSearchHelp">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <!-- HEADER TITLE HERE -->
                <h4 class="modal-title">
                    Search for a patient.
                </h4>
                <!-- CLOSE BUTTON -->
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- CAROUSEL IDENTIFIER NAME -->
                <div id="carouselProfileSearch"
                     class="carousel slide"
                     data-ride="carousel">
                    <ol class="carousel-indicators">
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselProfileSearch"
                            data-slide-to="0"
                            class="active"></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselProfileSearch"
                            data-slide-to="1"
                            class=""></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselProfileSearch"
                            data-slide-to="2"
                            class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <!-- CAROUSEL FIRST ITEM -->
                        <div class="carousel-item carousel-item-next carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/profile/001-search.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Select the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Search for Patient'
                                </code>
                                menu from the dashboard or navigation bar.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/profile/002-search.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Enter the 
                                <!-- HIGHLIGHT -->
                                <code>
                                     'name'
                                </code>
                                 of the patient to search for.
                            </div>
                        </div>
                        <!-- CAROUSEL LAST ITEM -->
                        <div class="carousel-item active carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/profile/003-search.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Submit the search by pressing the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'search icon'
                                </code>
                            </div>
                        </div>
                    </div>
                    <!-- CAROUSEL PREVIOUS -->
                    <a class="carousel-control-prev"
                       href="#carouselProfileSearch"
                       role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <!-- CAROUSEL NEXT -->
                    <a class="carousel-control-next"
                       href="#carouselProfileSearch"
                       role="button" data-slide="next">
                        <span class="carousel-control-next-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>