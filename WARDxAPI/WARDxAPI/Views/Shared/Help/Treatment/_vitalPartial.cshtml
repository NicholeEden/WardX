<div class="modal fade"
     id="TreatHelp">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <!-- HEADER TITLE HERE -->
                <h4 class="modal-title">
                    Adding Treatment
                </h4>
                <!-- CLOSE BUTTON -->
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- CAROUSEL IDENTIFIER NAME -->
                <div id="carouselEditFile"
                     class="carousel slide"
                     data-ride="carousel">
                    <ol class="carousel-indicators">
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselEditFile"
                            data-slide-to="0"
                            class="active"></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselEditFile"
                            data-slide-to="1"
                            class=""></li>
                        <!-- CAROUSEL IDENTIFIER TARGET -->
                        <li data-target="#carouselEditFile"
                            data-slide-to="2"
                            class=""></li>
                    </ol>
                    <div class="carousel-inner">
                        <!-- CAROUSEL FIRST ITEM -->
                        <div class="carousel-item carousel-item-next carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/Treatment/search.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Select the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Search for Patient'
                                </code>
                                in Patient Profile subsystem.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/Treatment/search.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Type in a letter or word
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Type first or last name'
                                </code>
                                search field.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/Treatment/view.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                View details by clicking
                                <!-- HIGHLIGHT -->
                                <code>
                                    'View Details'
                                </code>
                                button.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/Treatment/treat-direct.png" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                User is redirected into
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Patient Treatment'
                                </code>
                                subsystem.
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/img/help/Treatment/add-data.PNG" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Enter information in the
                                <!-- HIGHLIGHT -->
                                <code>
                                    'input fields'
                                </code>
                                and submit.
                            </div>
                        </div>
                        <!-- CAROUSEL LAST ITEM -->
                        <div class="carousel-item active carousel-item-left">
                            <img class="d-block w-100" src="~/img/help/Treatment/success.PNG" />
                            <!-- DESCRIPTION -->
                            <div class="text-center">
                                Successful entry will show
                                <!-- HIGHLIGHT -->
                                <code>
                                    'Green success message'
                                </code>
                            </div>
                        </div>
                    </div>
                    <!-- CAROUSEL PREVIOUS -->
                    <a class="carousel-control-prev"
                       href="#carouselEditFile"
                       role="button"
                       data-slide="prev">
                        <span class="carousel-control-prev-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <!-- CAROUSEL NEXT -->
                    <a class="carousel-control-next"
                       href="#carouselEditFile"
                       role="button" data-slide="next">
                        <span class="carousel-control-next-icon"
                              aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>

    </div>

</div>
