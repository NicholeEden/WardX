@model IAlertModel

@switch (Model.Type)
{
    case AlertModelType.Success:
        <div class="alert alert-success alert-dismissible">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-hidden="true">
                ×
            </button>
            <h5><i class="icon fas fa-check"></i> @Model.Header</h5>
            @Model.Content
        </div>
        break;
    case AlertModelType.Info:
        <div class="alert alert-info alert-dismissible">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-hidden="true">
                ×
            </button>
            <h5><i class="icon fas fa-info"></i> @Model.Header</h5>
            @Model.Content
        </div>
        break;
    case AlertModelType.Warning:
        <div class="alert alert-warning alert-dismissible">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-hidden="true">
                ×
            </button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> @Model.Header</h5>
            @Model.Content
        </div>
        break;
    case AlertModelType.Danger:
        <div class="alert alert-danger alert-dismissible">
            <button type="button"
                    class="close"
                    data-dismiss="alert"
                    aria-hidden="true">
                ×
            </button>
            <h5><i class="icon fas fa-ban"></i> @Model.Header</h5>
            @Model.Content
        </div>
        break;
    case AlertModelType.None:
        break;
}
